<Label>:
    font_name: 'view/media/Digitaldream.ttf'
    font_size: 36

<Multiplier@BoxLayout>:
    width: 40
    Label: 
        text: "MULTIPLIER"
    Label:
        text: "000"
        id: multiplier_label
        font_size: 100

<Score@BoxLayout>:
    width: 40
    Label:
        text: "SCORE"
    Label:
        text: "00000000"
        id: score_label
        font_size: 100

<Balls@BoxLayout>:
    width: 40
    Label: 
        text: "BALLS"
    Label: 
        text: "0/0"
        id: ball_count_label
        font_size: 100

<Collecting>:
    beer1: beer_gif1
    beer2: beer_gif2
    GridLayout:
        cols: 1
        rows: 3 
        Label:
            id: title
            text: "Brew as much as you can!"
            color: 1, 1, 0, 1
            height: 150
            size_hint_y: None
        GridLayout:
            cols: 3
            rows: 1
            Label:
                id: bottles
                text: "Main"
            Beer:
                id: beer_gif1
                size_hint_y: 0.8
                allow_stretch: True
            Beer:
                id: beer_gif2
                size_hint_y: 0.8
                allow_stretch: True
        GridLayout:
            height: 300
            size_hint_y: None
            cols:3
            rows:1
            Multiplier:
                orientation: 'vertical'
            Score:
                orientation: 'vertical'
            Balls:
                orientation: 'vertical'

